<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Libmemo.TreePage"
             NavigationPage.HasNavigationBar="False"
             >
    <ContentPage.Content>
        <StackLayout HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
            <StackLayout Orientation="Horizontal" Padding="10" HorizontalOptions="FillAndExpand">
                <Button Text="Отправить"
                    Clicked="Search_Button_Clicked"
                    HorizontalOptions="FillAndExpand"
                    />
                <Button Text="Сбросить"
                    Clicked="Reset_Button_Clicked"
                    HorizontalOptions="FillAndExpand"
                    />
            </StackLayout>
            <StackLayout>
                <Slider Minimum="0" Maximum="100" Value="0" ValueChanged="Slider1_ValueChanged"/>
                <Slider Minimum="0" Maximum="100" Value="0" ValueChanged="Slider2_ValueChanged"/>
                <Slider Minimum="0" Maximum="100" Value="0" ValueChanged="Slider3_ValueChanged"/>
            </StackLayout>
            <ScrollView x:Name="scroll" Orientation="Both">
                <AbsoluteLayout x:Name="absolute" />
            </ScrollView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>